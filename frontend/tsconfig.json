{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@groq/*": ["groq/*"],
      "@components/*": ["components/*"],
      "@util/*": ["util/*"],
      "@interfaces/*": ["interfaces/*"],
      "@theme": ["theme"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "block-content-to-react.d.ts"],
  "exclude": ["node_modules"]
}
